/**index.wxss**/
page{
    background: #f0f1f5;
}
.head {
    height: 180rpx;
    background: #30c58b;
    border-radius: 0 0 40rpx 40rpx;
    padding: 50rpx 30rpx;
    color: white;
    box-sizing: border-box;
}

.head text {
    font-size: 34rpx;
    vertical-align: middle;
    font-weight: 600;
}
.head navigator{
    display: inline-block;
}
.head icon {
    margin-left: 20rpx;
    width: 30rpx;
    height: 30rpx;
    background: url("https://636f-course-mtb0v-1301484494.tcb.qcloud.la/images/menu.png?sign=72b5e71d3eda18ee4fc3c894d828e5db&t=1583648821") no-repeat;
    background-size: 100%;
    vertical-align: middle;
}

.content {
    margin-top: 32rpx;
    margin-bottom: 0;
}

.content .wrap {
    margin: 0 32rpx;
    height: 70rpx;
}

.content .wrap .list, .content .wrap .look-all {
    height: 100%;
    line-height: 70rpx;
}

.content .wrap .list {
    float: left;
    font-size: 28rpx;
}

.content .wrap text {
    display: inline-block;
    margin-right: 30rpx;
    height: 100%;
}

.content .wrap .list .active {
    font-size: 34rpx;
    font-weight: 600;
    position: relative;
}

.content .wrap .list .active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 30%;
    width: 30rpx;
    height: 6rpx;
    background: #30c58b;
    border-radius: 6rpx;
}

.content .wrap .look-all {
    float: right;
    font-size: 24rpx;
    color: #b3b3b3;
}

.content .box {
    position: relative;
    width: 100%;
    height: 300rpx;
    background: #999;
    overflow-x: scroll;
}

.content .box .case {
    position: absolute;
    width: 200%;
}

.content .box .today, .content .box .tomorrow {
    width: 50%;
    height: 200rpx;
    background: red;
    float: left;
}

.content .box .tomorrow {
    background: yellow;
}

swiper{
    height: 100%;
}
swiper-item{
    overflow-y: scroll;
}

.lesson-wrap{
    margin: 0 32rpx;
    padding: 34rpx 40rpx;
    margin-top: 34rpx;
    font-weight: 600;
    background: white;
}
.lesson-wrap .time{
    font-size: 28rpx;
}
.lesson-wrap .sub{
    margin: 20rpx 0;
    font-size: 24rpx;
    position: relative;
}
.lesson-wrap .lecturer, .lesson-wrap .room, .lesson-wrap .task{
    color: #b3b3b3;
    font-size: 24rpx;
    font-weight: 400;
}
.lesson-wrap .sub > view, .lesson-wrap .task{
    line-height: 56rpx;
}
.lesson-wrap .add-sign{
    position: absolute;
    bottom: 10rpx; right: 0;
    width: 160rpx;
    height: 56rpx;
    background: #f0f1f5;
    color: #30c58b;
    padding: 0;
    font-size: 26rpx;
    line-height: 56rpx;
    border-radius: 100rpx;
}
.lesson-wrap:last-child{
    margin-bottom: 40rpx;
}
.none{
    display: none;
}

.mark{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0; left: 0;
    background: rgba(0,0,0,.4);
    opacity: 1;
    transition: transform .4s, opacity .6s .2s;
}
.mark .show-wrap{
    position: absolute;
    left: 32rpx; right: 32rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 32rpx 40rpx;
    border-radius: 20rpx;
    background: white;
}
.mark .show-wrap view {
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #f1f3f4;
}
.show-wrap text, .show-wrap input{
    line-height: 90rpx;
    vertical-align: middle;
}
.show-wrap text{
    font-size: 24rpx;
    color: #b3b3b3;
}
.show-wrap icon{
    width: 30rpx;
    height: 100%;
    background: url("https://636f-course-mtb0v-1301484494.tcb.qcloud.la/images/more.png?sign=6adfa9d1b9efaf533df70aed69457392&t=1583559311") no-repeat;
    background-position-y: 50%;
}
.show-wrap input{
    height: 100%;
    flex-grow: 2;
    padding: 0 32rpx;
    text-align: center;
}
.show-wrap button{
    margin-top: 32rpx;
}
.hidden {
    transform: translateY(-100%);
    opacity: 0;
}