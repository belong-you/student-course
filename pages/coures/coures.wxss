/* pages/coures/coures.wxss */
page{
    width: 100%;
    height: 100%;
    background: #f0f1f5;
}
.body{
    width: 100%;
    height: 1000rpx;
    text-align: center;
}
.body .left, .body .right{
    height: 100%;
}
.body .left{
    width: 9%;
    font-size: 28rpx;
}
.left .icon, .wrapper .top{
    height: 64rpx;
    line-height: 64rpx;
}
.left .icon{
    background: url("https://636f-course-mtb0v-1301484494.tcb.qcloud.la/images/change.png?sign=8ef3e85e97260fbeb3a61e42d536a125&t=1583743149") no-repeat;
    background-color: #30c58b;
    background-size: 50% 50%;
    background-position: 45% 45%;
}
.left .wrap, .wrapper .content{
    height: 916rpx;
    display: flex;
    flex-flow: wrap;
}
.left .wrap > view{
    width: 100%;
    line-height: calc(916rpx / 4);
}
.body .right{
    width: 91%;
    overflow-x: scroll;
}
.body .right .wrapper{
    width: 980rpx;
    height: 100%;
}
.wrapper .top, .wrapper .content{
    display: flex;
    justify-content: space-around;
}
.wrapper .content .week{
    width: calc(980rpx / 7);
    height: 100%;
    display: flex;
    flex-flow: wrap;
    flex: 1 1 0;
    position: relative;
}
.wrapper .content .week > view{
    width: 100%;
    height: calc(916rpx / 4);
    font-size: 28rpx;
    position: relative;
}
.wrapper .content .week > view > text{
    position: absolute;
    width: 100%;
    padding: 0 12rpx;
    box-sizing: border-box;
    top: 50%;left: 50%;
    transform: translate(-50%, -50%);
}
.body .left, .wrapper .top{
    background: white;
}
.wrapper .top{
    color: #b3b3b3;    
}
.foucs{
    background: #ceece2;
    color: #30c58b;
}
.text-foucs{
    color: black;
    font-weight: 600;
}

.notes{
    margin: 30rpx 100rpx;
    color: #b3b3b3;
    font-size: 24rpx;
}
.notes icon{
    width: 28rpx;
    height: 28rpx;
    background: #ceece2;
    margin: 0 10rpx;
}
.none{
    display: none;
}